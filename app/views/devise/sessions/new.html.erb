
<div class="signin-body">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>

    <h2>登录</h2>

    <%= f.label :email, class: 'sr-only' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder:'邮箱' %>
    <%= f.label :password, class: 'sr-only' %>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder:'密码' %>

    <% if devise_mapping.rememberable? -%>
      <div class="checkbox">
        <%= f.check_box :remember_me %> 记住我
      </div>
    <% end -%>

    <a class="text-danger"><%= alert %></a>

    <%= f.submit "登录", class: 'btn btn-lg btn-primary btn-block login-btn' %>

    <%= render "devise/shared/links" %>
  <% end %>
</div>
